<Window x:Class="NatrualSelectionSim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NatrualSelectionSim"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="350" ResizeMode="CanMinimize">
    <Grid>
        <Button Content="Start" HorizontalAlignment="Left" Margin="135,213,0,0" Width="75" Click="Button_Click" Height="20" VerticalAlignment="Top"/>
        <Label Content="Food/Day:" HorizontalAlignment="Left" Height="25" Margin="102,77,0,0" VerticalAlignment="Top" Width="67" RenderTransformOrigin="0.5,0.5"/>
        <Label Content="Number Of Animals:" HorizontalAlignment="Left" Height="25" Margin="49,102,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Natrual Selection Simulator" HorizontalAlignment="Left" Margin="27,27,0,0" VerticalAlignment="Top" FontSize="24"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="174,79,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="120" Cursor="SizeNWSE" x:Name="PlantNum"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="174,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="10"/>
        <Label Content="Width:" HorizontalAlignment="Left" Height="25" Margin="115,126,0,0" VerticalAlignment="Top" Width="54" RenderTransformOrigin="0.5,0.5"/>
        <Label Content="Height:" HorizontalAlignment="Left" Height="35" Margin="115,151,0,0" VerticalAlignment="Top" Width="54"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="174,128,0,0" TextWrapping="Wrap" Text="700" VerticalAlignment="Top" Width="120" Cursor="SizeNWSE" x:Name="w"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="174,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="500" x:Name="h"/>
        <Label Content="Hr/Day:" HorizontalAlignment="Left" Height="25" Margin="115,177,0,0" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.5,0.5"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="174,179,0,0" TextWrapping="Wrap" Text="2" VerticalAlignment="Top" Width="120" Cursor="SizeNWSE" x:Name="Daylen"/>

    </Grid>
</Window>
