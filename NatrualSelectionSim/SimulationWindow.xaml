<Window x:Class="NatrualSelectionSim.SimulationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NatrualSelectionSim"
        mc:Ignorable="d"
        Title="Simulation" Height="500" Width="750" SizeChanged="Window_SizeChanged">
    <Grid>
        <Border BorderThickness="20" Height="90" Width="100" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FFFFE49A" x:Name="sand" CornerRadius="30" BorderBrush="#FF7DFFFF"/>
        <Canvas x:Name="Paper">
        </Canvas>
        <Border BorderThickness="0" Height="98" Width="190" Margin="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Background="White" x:Name="background"/>
        <Label   Content="Speed at "    Width="57"  Height="25" Margin="0,10,126,0" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <TextBox Text="1"               Width="40"  Height="20" Margin="0,14,86,0"  VerticalAlignment="Top" HorizontalAlignment="Right" x:Name="SpeedUp"/>
        <Label x:Name="debug"   Content="times normal" Width="80"  Height="24" Margin="0,10,7,0"   VerticalAlignment="Top" HorizontalAlignment="Right" />
        <Button  Content="Pause"        Width="170" Height="24" Margin="0,39,11,0"  VerticalAlignment="Top" HorizontalAlignment="Right" x:Name="PauseOrResume"/>
        <Button  Content="End"          Width="89" Height="21" Margin="0,68,92,0"  VerticalAlignment="Top" HorizontalAlignment="Right" x:Name="End"/>
        <Label   Content="Day: 0"    Width="100"  Height="38" Margin="321,1,0,0" FontSize="20" RenderTransformOrigin="-0.874,-0.129" FontWeight="Bold" x:Name="DayCount" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <Button  Content="Resize"          Width="81" Height="21" Margin="0,68,11,0"  VerticalAlignment="Top" HorizontalAlignment="Right" Click="Button_Click"/>
    </Grid>
</Window>
